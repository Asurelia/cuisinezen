{
  "name": "CuisineZen - Gestion Intelligente de Cuisine",
  "short_name": "CuisineZen",
  "description": "Application de gestion d'inventaire culinaire avec IA, reconnaissance de codes-barres et optimisation des coûts",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#16a34a",
  "background_color": "#ffffff",
  "scope": "/",
  "categories": ["food", "productivity", "lifestyle"],
  "lang": "fr-FR",
  "dir": "ltr",
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Scanner un produit",
      "short_name": "Scanner",
      "description": "Scanner rapidement un code-barres",
      "url": "/inventory?action=scan",
      "icons": [
        {
          "src": "/icons/shortcut-scan.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ajouter une recette",
      "short_name": "Recette",
      "description": "Créer une nouvelle recette",
      "url": "/recipes?action=create",
      "icons": [
        {
          "src": "/icons/shortcut-recipe.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventaire",
      "short_name": "Stock",
      "description": "Voir l'inventaire actuel",
      "url": "/inventory",
      "icons": [
        {
          "src": "/icons/shortcut-inventory.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Stats",
      "description": "Consulter les statistiques",
      "url": "/analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://cuisinezen.web.app/"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+cuisinezen",
      "url": "/?action=%s"
    }
  ],
  "capture_links": "existing-client-navigate",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "screenshots": [
    {
      "src": "/screenshots/mobile-inventory.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Gestion d'inventaire sur mobile"
    },
    {
      "src": "/screenshots/mobile-scanner.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Scanner de codes-barres"
    },
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Tableau de bord analytics"
    },
    {
      "src": "/screenshots/desktop-recipes.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Gestion des recettes"
    }
  ]
}